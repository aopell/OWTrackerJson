<Window x:Class="OWTracker.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OWTracker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Title="Overwatch Competitive Game Tracker" Height="272" Width="609.975">
    <Grid>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="Overwatch Competitive Game Tracker" VerticalAlignment="Top" FontFamily="{DynamicResource BigNoodleTooOblique}" FontSize="48" />
        <TextBlock x:Name="VersionTextBlock" HorizontalAlignment="Left" Margin="10,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="{DynamicResource Futura}" FontSize="24" Height="165" Width="584">
            <Run Text="VERSION {APPLICATION_VERSION}" /><LineBreak /><Run Text="" /><LineBreak /><Run FontSize="16" Text="The Overwatch competitive tracker tracks your competitive games and shows you stats about your competitive play. Track your skill rating over time and see detailed statistics per map, hero, group size, and more." /><LineBreak /><Run /><LineBreak /><Run FontSize="20" Text="© Aaron Opell 2017" />
        </TextBlock>

    </Grid>
</Window>